{
  "hosting": [
    {
      "target": "app_dev",
      "public": "public",
      "ignore": [
        ".firebase",
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/game{,/**}",
          "destination": "/game"
        }
      ],
      "headers": [
        {
          "source": "/game{,/**}",
          "headers": [
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "credentialless"
            },
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            }
          ]
        }
      ]
    },
    {
      "target": "app_stg",
      "public": "build/web",
      "ignore": [
        ".firebase",
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "credentialless"
            },
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            }
          ]
        }
      ]
    },
    {
      "target": "app_prod",
      "public": "build/web",
      "ignore": [
        ".firebase",
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "credentialless"
            },
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            }
          ]
        }
      ]
    }
  ]
}
